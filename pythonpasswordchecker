import re   # Regex module for pattern matching

def check_password_strength(password: str):
    """Check password strength and return (rating, suggestions)."""
    strength = 0
    suggestions = []

    # Rule 1: Length check
    if len(password) >= 8:
        strength += 1
    else:
        suggestions.append("Make it at least 8 characters long.")

    # Rule 2: Uppercase check
    if re.search(r"[A-Z]", password):
        strength += 1
    else:
        suggestions.append("Add at least one uppercase letter (A-Z).")

    # Rule 3: Lowercase check
    if re.search(r"[a-z]", password):
        strength += 1
    else:
        suggestions.append("Add at least one lowercase letter (a-z).")

    # Rule 4: Digit check
    if re.search(r"\d", password):
        strength += 1
    else:
        suggestions.append("Include at least one number (0-9).")

    # Rule 5: Special character check
    if re.search(r"[!@#$%^&*(),.?\":{}|<>]", password):
        strength += 1
    else:
        suggestions.append("Add at least one special character (e.g. !,@,#,$).")

    # Rating system
    if strength == 5:
        rating = "Strong 💪"
    elif 3 <= strength < 5:
        rating = "Moderate 😐"
    else:
        rating = "Weak ❌"

    return rating, suggestions


# ---- MAIN PROGRAM ----
if __name__ == "__main__":
    pwd = input("Enter your password to check: ")
    rating, notes = check_password_strength(pwd)
    print(f"\nPassword Strength: {rating}")
    if notes:
        print("Suggestions to improve your password:")
        for n in notes:
            print(" -", n)
